<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_margin="15dip"
        android:layout_weight="0.21"
        android:background="#93ffffff"
        android:padding="15dip">


        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="用户名："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/text_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/TextView1"
            android:layout_toRightOf="@+id/TextView1"
            android:ems="10"
            android:hint="请输入用户名"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_userName"
            android:layout_marginTop="35dp"
            android:text="密    码："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/text_userPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_userName"
            android:layout_alignStart="@+id/text_userName"
            android:layout_below="@+id/text_userName"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_alignBaseline="@+id/btn_login"
            android:layout_alignBottom="@+id/btn_login"
            android:layout_alignRight="@+id/text_userPwd"
            android:layout_alignEnd="@+id/text_userPwd" />

        <TextView
            android:id="@+id/resultMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请先登录哦~"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_toLeftOf="@+id/text_userName"
            android:layout_toStartOf="@+id/text_userName" />

    </RelativeLayout>
</LinearLayout>
